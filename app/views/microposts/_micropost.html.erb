<tr>
  <td class="micropost">
    <span class="content"><%= micropost.content %></span>
	<br />
	<span class="timestamp">
      Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    </span>
	<br />
	<ol> 
		<% @data = {"Title"=>"Download", "Plot"=>"No details available", "Year" => "-", "Genre"=>"-","imdbRating"=>"0"} %>
                <% @data = ActiveSupport::JSON.decode(micropost.data_json) unless micropost.data_json.nil? || micropost.data_json.empty? %>

		<li class="stbody">
		<div class="stimg">
			<a href=<%= micropost.magnet_link %>><%= image_tag micropost.poster_src , :size => "125x186" %></a>
		</div> 
		<div class="sttext">
			<a href=<%= micropost.magnet_link %>><%= @data['Title'] %></a>
			<br />
			<%= @data['Plot'] %>
			<br />
			<div class="sttime">Year: <%= @data['Year'] %> - Genre: <%= @data['Genre'] %> - Rating: <%= @data['imdbRating'] %></div> 
		</div> 
		</li>
	</ol>
  </td>
</tr>
