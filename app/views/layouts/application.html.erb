<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/> 
	<%= render 'layouts/stylesheets' %>
	<link href='http://fonts.googleapis.com/css?family=Niconne' rel='stylesheet' type='text/css'>
	<%= javascript_include_tag :defaults %>
	<%= javascript_include_tag "datacrawler.js" %>
	<script type="text/javascript">

  		var _gaq = _gaq || [];
  		_gaq.push(['_setAccount', 'UA-33778843-1']);
  		_gaq.push(['_setDomainName', 'juitt.com']);
  		_gaq.push(['_trackPageview']);

  		(function() {
    			var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    			ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    			var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  		})();

	</script>	
  </head>
  <body>
    <div class="container">
	  <%= render 'layouts/header' %> <!-- Header section -->
      <section class="round">
	    <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
      </section>
	  <%= render 'layouts/footer' %> <!-- Footer section -->
	<!-- Quote -->
	<br />
	<div class="famous_quote">"Taste is the common sense of genius." by	Victor Hugo</div>
	  <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
