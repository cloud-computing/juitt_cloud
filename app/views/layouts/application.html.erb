<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
	<%= render 'layouts/stylesheets' %>
	<link href='http://fonts.googleapis.com/css?family=Niconne' rel='stylesheet' type='text/css'>
	<%= javascript_include_tag :defaults %>
	<%= javascript_include_tag "datacrawler.js" %>
	
  </head>
  <body>
    <div class="container">
	  <%= render 'layouts/header' %> <!-- Header section -->
      <section class="round">
	    <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
      </section>
	  <%= render 'layouts/footer' %> <!-- Footer section -->
	<!-- Quote -->
	<br />
	<div class="famous_quote">"Taste is the common sense of genius." by	Victor Hugo</div>
	  <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>